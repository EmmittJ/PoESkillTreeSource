<UserControl x:Class="POESKillTree.Controls.BanditSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:POESKillTree.Model"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DataContext="{d:DesignInstance model:BanditSettings}">
    <StackPanel Orientation="Horizontal">
        <ComboBox ItemsSource="{Binding BanditValues}" SelectedValue="{Binding Choice}" Width="80" />
    </StackPanel>
</UserControl>

